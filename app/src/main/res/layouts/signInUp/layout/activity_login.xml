<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@drawable/ic_background">



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="70dp"

        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"

        >

        <RelativeLayout
            android:id="@+id/product_type_layout"
            android:layout_width="300dp"
            android:layout_height="350dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editPhoneNumber"
                android:hint="Phone"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editTextPassword"

                android:layout_margin="5dp"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_iconLeft="@drawable/ic_telephone"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:inputType="textPassword"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_iconLeft="@drawable/ic_password"
                />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/cookieman2"
                android:layout_above="@+id/editPhoneNumber"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/buttonSignin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_above="@+id/buttonSignup"
        android:layout_marginBottom="15dp"
        app:nb_textSize="20sp"
        app:nb_text="Sign in"

        app:nb_borderWidth="2dp"
        app:nb_backgroundColor="@color/colorPrimary"
        app:nb_focusColor="#F1DB8C"
        app:nb_textColor="#FFF"
        app:nb_radius="5dp"

        />

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/buttonSignup"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:nb_textSize="20sp"
        app:nb_text="Sign up"

        app:nb_borderWidth="2dp"
        app:nb_backgroundColor="@color/colorPrimary"
        app:nb_focusColor="#F1DB8C"
        app:nb_textColor="#FFF"
        app:nb_radius="5dp" />


</RelativeLayout>


