<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUpActivity"
    android:background="@drawable/ic_background">



    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSignUp"
        android:layout_width="300dp"
        android:layout_height="500dp"


        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="70dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="30dp"

        >



        <RelativeLayout
            android:id="@+id/product_type_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

             <ImageView
                android:id="@+id/imageViewSignUp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_above="@+id/editTextName"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cookieman2" />



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_margin="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_iconLeft="@drawable/ic_password"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editTextPassword2"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp"
                android:hint="Email"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_iconLeft="@drawable/ic_email"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextPhone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editTextEmail"
                android:layout_marginBottom="5dp"
                android:hint="Phone"
                android:inputType="number"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_iconLeft="@drawable/ic_telephone"
                android:layout_margin="5dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editTextPhone2"
                android:layout_marginBottom="5dp"
                android:hint="Address"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_iconLeft="@drawable/ic_address"
                android:layout_margin="5dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editTextAddress"
                android:layout_marginBottom="5dp"
                android:hint="Name"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_iconLeft="@drawable/ic_name"
                android:layout_margin="5dp"/>




        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/buttonSignup2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cardViewSignUp"
        app:nb_textSize="20sp"
        app:nb_text="Sign up"

        app:nb_borderWidth="2dp"
        app:nb_backgroundColor="@color/colorPrimary"
        app:nb_focusColor="#F1DB8C"
        app:nb_textColor="#FFF"
        app:nb_radius="5dp"


        android:text="Sign up" />


</RelativeLayout>


